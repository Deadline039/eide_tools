{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "dotnet build",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "dotnet clean",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Generate antlr parser",
            "type": "shell",
            "command": "${workspaceFolder}\\antlr_gen.bat \"${file}\"",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": "build",
            "problemMatcher": []
        }
    ]
}